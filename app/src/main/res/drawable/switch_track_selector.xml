<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="3dp">
    <selector>
        <item android:state_checked="false">
            <shape android:shape="rectangle">
                <solid android:color="@color/grey"/>
                <stroke
                    android:width="0.5dp"
                    android:color="@color/colorBlueGrey100"/>
                <corners android:radius="10dp"/>
                <size
                    android:width="20dp"
                    android:height="10dp"/>
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/colorBlueGrey500"/>
                <stroke
                    android:width="1dp"
                    android:color="@color/colorBlueGrey400"/>
                <corners android:radius="10dp"/>
                <size
                    android:width="20dp"
                    android:height="10dp"/>
            </shape>
        </item>
    </selector>
</inset>